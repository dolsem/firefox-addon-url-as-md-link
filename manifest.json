{

  "description": "Adds a button to copy page URL as a markdown link.",
  "manifest_version": 2,
  "name": "url-as-md-link",
  "version": "1.1",
  "homepage_url": "https://github.com/dolsem/firefox-addon-url-as-md-link",

  "background": {
    "scripts": ["clipboard.js", "background.js"]
  },

  "page_action": {
    "default_icon": "icons/copy-link.svg",
    "browser_style": true
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite",
    "storage"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "35e32c40-b2d2-4b89-9421-7d1c0e018023@addon"
    }
  }
    
}
